<?xml version="1.0"?>
<launch>


    <!-- run pointcloud_to_laserscan node -->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
        <!-- Remap the input point cloud topic and the output laser scan topic -->
         <!-- TODO change to vertical planar wall points once rosnode was written-->
        <remap from="cloud_in" to="/wall_pc"/>
        <remap from="scan" to="/scan"/>
        <rosparam>
            target_frame: base_link # Leave disabled to output scan in pointcloud frame
            transform_tolerance: 0.01
            min_height: 0.2
            max_height: 1.5

            angle_min: -3.14159 # -M_PI
            angle_max: 3.14159 # M_PI

            angle_increment: 0.00870 # M_PI/720.0
            scan_time: 0.5
            range_min: 0.1
            range_max: 30
            use_inf: true
            inf_epsilon: 1.0

            # Concurrency level, affects number of pointclouds queued for processing and number of threads used
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 1
        </rosparam>
    </node>

</launch>
